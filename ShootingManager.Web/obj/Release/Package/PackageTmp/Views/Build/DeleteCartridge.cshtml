@model ShootingManager.Web.ViewModels.CartridgeViewModel
@using ShootingManager.Entities.Models;

@{
    ViewBag.Title = "Delete Cartridge";
}
<head>
    <title>Shooting Manager: Delete Cartridge - @(((Cartridge)@Model.Entity).Name)</title>
</head>
<div class="container">
    <div class="row">
        @Html.ActionLink("Shooting Manager Home", "Index", "Home", null, new { @class = "NavLinkStyle" }) | @Html.ActionLink("Build Cartridges/Loads", "Index", "Build", null, new { @class = "NavLinkStyle" })
    </div>

    <h2>Delete Cartridge</h2>

    <h3>Are you sure you want to delete this cartridge?</h3>
    @using (Html.BeginForm("DeleteCartridge", "Build", FormMethod.Post, new { id = ((Cartridge)Model.Entity).Id, @class = "grid-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            <br />

            <fieldset>

                <legend>Basic Information</legend>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => ((Cartridge)model.Entity).Name, "Name:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-1">
                            @Html.DisplayFor(model => ((Cartridge)model.Entity).Name)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.EntityView.CartridgeLoadViewCaliberId, "Caliber:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-1">
                            @Html.DisplayFor(model => model.EntityView.CartridgeLoadViewCaliberViewName)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => ((Cartridge)model.Entity).CartridgeLoadId, "Cartridge Load:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-1">
                            @Html.DisplayFor(model => model.EntityView.CartridgeLoadViewName)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => ((Cartridge)model.Entity).BrassId, "Brass:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-1">
                            @Html.DisplayFor(model => model.EntityView.BrassViewName)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => ((Cartridge)model.Entity).PrimerId, "Primer:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-1">
                            @Html.DisplayFor(model => model.EntityView.PrimerViewName)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => ((Cartridge)model.Entity).ManufacturerId, "Manufacturer:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-1">
                            @Html.DisplayFor(model => model.EntityView.ManufacturerName)
                        </div>
                    </div>
                </div>

            </fieldset>

            <fieldset>

                <br />
                <br />
                <legend>Basic Information</legend>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => ((Cartridge)model.Entity).Notes, "Notes:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-1">
                            @Html.DisplayFor(model => ((Cartridge)model.Entity).Notes)
                        </div>
                    </div>
                </div>

            </fieldset>
            <br />
            <hr />
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn-style" />
        </div>
    }
</div>