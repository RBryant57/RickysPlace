@model IEnumerable<ShootingManager.Web.ViewModels.CaliberViewModel>
@using ShootingManager.Entities.Models;

@{
    ViewBag.Title = "Caliber Index";
}
<head>
    <title>Shooting Manager: Caliber Index</title>
</head>
<div class="container">
    <div class="row">
        @Html.ActionLink("Shooting Manager Home", "Index", "Home", null, new { @class = "NavLinkStyle" }) | @Html.ActionLink("Shooting Manager Items", "Index", "Item", null, new { @class = "NavLinkStyle" })
    </div>

    <h2>Caliber Index</h2>

    @Html.ActionLink("Create New", "Create", null, new { @class = "EditLinkStyle" })
    <br />
    <br />
    <div class="control-label col-md-offset-5">
        <input type="search" class="light-table-filter" data-table="tablesorter" placeholder="Filter">
    </div>
    <br />
    <table class="tablesorter" id="shootingtable">
        <thead>
            <tr>
                <th>
                    @Html.Label("Sort")
                </th>
                <th>
                    @Html.Label("Name")
                </th>
                <th>
                    @Html.Label("Diameter")
                </th>
                <th>
                    @Html.Label("Brass Length")
                </th>
                <th>
                    @Html.Label("Primer Type")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShootingManager.Web.ViewModels.CaliberViewModel item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => ((Caliber)item.Entity).SortOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ((Caliber)item.Entity).Name)
                    </td>
                    <td>
                        @{
                            string parameterValue = ((Caliber)item.Entity).Diameter.ToString();
                        }
                        @Html.DisplayFor(modelItem => parameterValue)
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.EntityView.DiameterUnitViewAbbreviation)
                    </td>
                    <td>
                        @{
                            parameterValue = ((Caliber)item.Entity).BrassLength.ToString();
                        }
                        @Html.DisplayFor(modelItem => parameterValue)
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.EntityView.BrassLengthUnitViewAbbreviation)
                    </td>
                    <td>
                        @Html.ActionLink(item.EntityView.PrimerTypeAbbreviation, "Details", "PrimerType", new { id = ((Caliber)item.Entity).PrimerTypeId }, new { @class = "EditLinkStyle" })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = ((Caliber)item.Entity).Id }, new { @class = "EditLinkStyle" }) |
                        @Html.ActionLink("Details", "Details", new { id = ((Caliber)item.Entity).Id }, new { @class = "EditLinkStyle" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = ((Caliber)item.Entity).Id }, new { @class = "EditLinkStyle" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/tablefilter")
    <script type="text/JavaScript">
        $(document).ready(function () {
            $("#shootingtable").tablesorter();
        }
        );
    </script>
}