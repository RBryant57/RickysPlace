@model ShootingManager.Entities.Models.Powder

@{
    ViewBag.Title = "Edit Powder";
}
<head>
    <title>Shooting Manager: Edit Powder - @(@Model.Name)</title>
</head>
<div class="container">
    <div class="row">
        @Html.ActionLink("Shooting Manager Home", "Index", "Home", null, new { @class = "NavLinkStyle" }) | @Html.ActionLink("Shooting Manager Items", "Index", "Item", null, new { @class = "NavLinkStyle" }) | @Html.ActionLink("Powder Index", "Index", "Powder", null, new { @class = "NavLinkStyle" })
    </div>

    <h2>Edit Powder</h2>

    @using (Html.BeginForm("Edit", "Powder", FormMethod.Post, new { @class = "grid-form" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <hr />
            <br />
            @Html.ValidationSummary(true)

            <fieldset>

                <legend>Basic Information</legend>

                <div class="form-group" data-span-row="1">
                    <div data-span-field="1">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-9">
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.MaufacturerId, "Maufacturer", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-4">
                            @Html.DropDownList("MaufacturerId", String.Empty)
                            @Html.ValidationMessageFor(model => model.MaufacturerId)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.PowderTypeId, "Powder Type", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-4">
                            @Html.DropDownList("PowderTypeId", String.Empty)
                            @Html.ValidationMessageFor(model => model.PowderTypeId)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.PowderShapeId, "Powder Shape", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-4">
                            @Html.DropDownList("PowderShapeId", String.Empty)
                            @Html.ValidationMessageFor(model => model.PowderShapeId)
                        </div>
                    </div>
                </div>

            </fieldset>

            <fieldset>
                
                <br />
                <br />
                <legend>Optional Information</legend>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.Notes, new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-9">
                            @Html.TextAreaFor(model => model.Notes, new { @rows = 5 })
                            @Html.ValidationMessageFor(model => model.Notes)
                        </div>
                    </div>
                </div>

            </fieldset>
            
            <br />
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn-style" />
                </div>
            </div>
        </div>
        
    }
</div>