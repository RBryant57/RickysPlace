@model IEnumerable<ShootingManager.Web.ViewModels.BulletViewModel>

@{
    ViewBag.Title = "Bullet Index";
}
<head>
    <title>Shooting Manager: Bullet Index</title>
</head>
<div class="container">
    <div class="row">
        @Html.ActionLink("Shooting Manager Home", "Index", "Home", null, new { @class = "NavLinkStyle" }) | @Html.ActionLink("Shooting Manager Items", "Index", "Item", null, new { @class = "NavLinkStyle" })
    </div>

    <h2>Bullet Index</h2>

    @Html.ActionLink("Create New", "Create", null, new { @class = "EditLinkStyle" })
    <br />
    <br />

    <table class="tablesorter" id="shootingtable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Bullet Name")
                </th>
                <th>
                    @Html.DisplayName("Caliber")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) 
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BulletName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CaliberName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.BulletId }, new { @class = "EditLinkStyle" }) |
                        @Html.ActionLink("Details", "Details", new { id=item.BulletId }, new { @class = "EditLinkStyle" }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.BulletId }, new { @class = "EditLinkStyle" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    <script type="text/JavaScript">
        $(document).ready(function () {
            $("#shootingtable").tablesorter();
        }
        );
    </script>
}