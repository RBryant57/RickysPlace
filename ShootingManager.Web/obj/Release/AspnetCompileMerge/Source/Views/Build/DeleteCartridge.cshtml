@model ShootingManager.Entities.Models.Cartridge

@{
    ViewBag.Title = "Delete Cartridge";
}
<head>
    <title>Shooting Manager: Delete Cartridge - @(@Model.Name)</title>
</head>
<div class="container">
    <div class="row">
        @Html.ActionLink("Shooting Manager Home", "Index", "Home", null, new { @class = "NavLinkStyle" }) | @Html.ActionLink("Build Cartridges/Loads", "Index", "Build", null, new { @class = "NavLinkStyle" })
    </div>

    <h2>Delete Cartridge</h2>

    <h3>Are you sure you want to delete this cartridge?</h3>
    @using (Html.BeginForm("DeleteCartridge", "Build", FormMethod.Post, new { id = Model.Id, @class = "grid-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            <br />

            <fieldset>

                <legend>Basic Information</legend>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.Name, "Name:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-9">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.CartridgeLoad.CaliberId, "Caliber:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-9">
                            @Html.DisplayFor(model => model.CartridgeLoad.Caliber.Name)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.CartridgeLoadId, "Cartridge Load:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-9">
                            @Html.DisplayFor(model => model.CartridgeLoad.Name)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.BrassId, "Brass:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-9">
                            @Html.DisplayFor(model => model.Brass.Name)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.PrimerId, "Primer:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-9">
                            @Html.DisplayFor(model => model.Primer.Name)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.ManufacturerId, "Manufacturer:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-9">
                            @Html.DisplayFor(model => model.Manufacturer.Name)
                        </div>
                    </div>
                </div>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.ManufactureDate, "Manufacture Date:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-9">
                            @Html.DisplayFor(model => model.ManufactureDate)
                        </div>
                    </div>
                </div>

            </fieldset>

            <fieldset>

                <br />
                <br />
                <legend>Basic Information</legend>

                <div class="form-group" data-row-span="1">
                    <div data-field-span="1">
                        @Html.LabelFor(model => model.Notes, "Notes:", new { @class = "control-label col-md-2" })
                        <div class="control-label col-md-9">
                            @Html.DisplayFor(model => model.Notes)
                        </div>
                    </div>
                </div>

            </fieldset>
            <br />
            <hr />
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn-style" />
        </div>
    }
</div>