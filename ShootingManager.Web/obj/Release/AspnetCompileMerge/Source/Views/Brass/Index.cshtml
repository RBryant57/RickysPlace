@model IEnumerable<Data.Core.Interfaces.IEntity>

@{
    ViewBag.Title = "Brass Index";
}
<head>
    <title>Shooting Manager: Brass Index</title>
</head>
<div class="container">

    <div class="row">
        @Html.ActionLink("Shooting Manager Home", "Index", "Home", null, new { @class="NavLinkStyle" }) | @Html.ActionLink("Shooting Manager Items", "Index", "Item", null, new { @class = "NavLinkStyle" })
    </div>

    <h2>Brass Index</h2>

    @Html.ActionLink("Create New", "Create", null, new { @class = "EditLinkStyle" })
    <br />
    <br />

    <table id="shootingtable" class="tablesorter">
        <thead>
            <tr>
                <th>
                    @Html.Label("Name")
                </th>
                <th>
                    @Html.Label("Caliber")
                </th>
                <th>
                    @Html.Label("Manufacturer Name")
                </th>
                <th>
                    @Html.Label("Material")
                </th>
                <th>
                    @Html.Label("Length")
                </th>
                <th>
                    @Html.Label("Times Fired")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShootingManager.Entities.Models.Brass item in Model) 
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Caliber.Name)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Manufacturer.Name)
                    </td>
                    <td>
                          @Html.DisplayFor(modelItem => item.Material.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.Unit.Abbreviation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimesFired)
                    </td>
                    <td>
                         @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "EditLinkStyle" }) |
                         @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "EditLinkStyle" }) |
                         @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "EditLinkStyle" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    <script type="text/JavaScript">
        $(document).ready(function () {
            $("#shootingtable").tablesorter();
        }
        );
    </script>
}