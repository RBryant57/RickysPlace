@model IEnumerable<Data.Core.Interfaces.IEntity>

@{
    ViewBag.Title = "Gun Index";
}
<head>
    <title>Shooting Manager: Gun Index</title>
</head>
<div class="container">
    <div class="row">
        @Html.ActionLink("Shooting Manager Home", "Index", "Home", null, new { @class = "NavLinkStyle" }) | @Html.ActionLink("Shooting Manager Items", "Index", "Item", null, new { @class = "NavLinkStyle" })
    </div>

    <h2>Gun Index</h2>

    @Html.ActionLink("Create New", "Create", null, new { @class = "EditLinkStyle" })
    <br />
    <br />

    <table class="tablesorter" id="shootingtable">
        <thead>
            <tr>
                <th>
                    @Html.Label("Name")
                </th>
                <th>
                    @Html.Label("Caliber")
                </th>
                <th>
                    @Html.Label("Manufacturer")
                </th>
                <th>
                    @Html.Label("Capacity")
                </th>
                <th>
                    @Html.Label("Gun Type")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShootingManager.Entities.Models.Gun item in Model) 
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Caliber.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GunType.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "EditLinkStyle" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "EditLinkStyle" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "EditLinkStyle" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    <script type="text/JavaScript">
        $(document).ready(function () {
            $("#shootingtable").tablesorter();
        }
        );
    </script>
}