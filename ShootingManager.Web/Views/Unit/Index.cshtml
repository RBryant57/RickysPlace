@model IEnumerable<ShootingManager.Web.ViewModels.UnitViewModel>
@using ShootingManager.Entities.Models;

@{
    ViewBag.Title = "Unit Index";
}
<head>
    <title>Shooting Manager: Unit Index</title>
</head>
<div class="container">
    <div class="row">
        @Html.ActionLink("Shooting Manager Home", "Index", "Home", null, new { @class = "NavLinkStyle" }) | @Html.ActionLink("Shooting Manager Items", "Index", "Item", null, new { @class = "NavLinkStyle" })
    </div>

    <h2>Unit Index</h2>

    @Html.ActionLink("Create New", "Create", null, new { @class = "EditLinkStyle" })
    <br />
    <br />
    <div class="control-label col-md-offset-5">
        <input type="search" class="light-table-filter" data-table="tablesorter" placeholder="Filter">
    </div>
    <br />
    <table class="tablesorter" id="shootingtable">
        <thead>
            <tr>
                <th>
                    @Html.Label("Name")
                </th>
                <th>
                    @Html.Label("Plural")
                </th>
                <th>
                    @Html.Label("Abbreviation")
                </th>
                <th>
                    @Html.Label("Unit Type")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShootingManager.Web.ViewModels.UnitViewModel item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => ((Unit)item.Entity).Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ((Unit)item.Entity).Plural)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ((Unit)item.Entity).Abbreviation)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.EntityView.UnitTypeName)*@
                        @Html.ActionLink(item.EntityView.UnitTypeName, "Details", "UnitType", new { id = ((Unit)item.Entity).UnitTypeId }, new { @class = "EditLinkStyle" })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = ((Unit)item.Entity).Id }, new { @class = "EditLinkStyle" }) |
                        @Html.ActionLink("Details", "Details", new { id = ((Unit)item.Entity).Id }, new { @class = "EditLinkStyle" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = ((Unit)item.Entity).Id }, new { @class = "EditLinkStyle" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/tablefilter")
    <script type="text/JavaScript">
        $(document).ready(function () {
            $("#shootingtable").tablesorter();
        }
        );
    </script>
}