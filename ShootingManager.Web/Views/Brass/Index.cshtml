@model IEnumerable<ShootingManager.Web.ViewModels.BrassViewModel>
    @using ShootingManager.Entities.Models;

@{
    ViewBag.Title = "Brass Index";
}
<head>
    <title>Shooting Manager: Brass Index</title>
</head>
<div class="container">

    <div class="row">
        @Html.ActionLink("Shooting Manager Home", "Index", "Home", null, new { @class="NavLinkStyle" }) | @Html.ActionLink("Shooting Manager Items", "Index", "Item", null, new { @class = "NavLinkStyle" })
    </div>

    <h2>Brass Index</h2>

    @Html.ActionLink("Create New", "Create", null, new { @class = "EditLinkStyle" })
    <br />
    <br />
    <div class="control-label col-md-offset-5">
        <input type="search" class="light-table-filter" data-table="tablesorter" placeholder="Filter">
    </div>
    <br />
    <table id="shootingtable" class="tablesorter">
        <thead>
            <tr>
                <th>
                    @Html.Label("Name")
                </th>
                <th>
                    @Html.Label("Caliber")
                </th>
                <th>
                    @Html.Label("Manufacturer Name")
                </th>
                <th>
                    @Html.Label("Material")
                </th>
                <th>
                    @Html.Label("Length")
                </th>
                <th>
                    @Html.Label("Times Fired")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShootingManager.Web.ViewModels.BrassViewModel item in Model) 
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => ((Brass)item.Entity).Name)
                    </td>
                    <td>
                        @Html.ActionLink(item.EntityView.CaliberViewName, "Details", "Caliber", new { id = ((Brass)item.Entity).CaliberId }, new { @class = "EditLinkStyle" })
                    </td>
                    <td>
                        @Html.ActionLink(item.EntityView.ManufacturerName, "Details", "Manufacturer", new { id = ((Brass)item.Entity).ManufacturerId }, new { @class = "EditLinkStyle" })
                    </td>
                    <td>
                        @Html.ActionLink(item.EntityView.MaterialName, "Details", "Material", new { id = ((Brass)item.Entity).MaterialId }, new { @class = "EditLinkStyle" })
                    </td>
                    <td>
                        @{
                            string parameterValue = String.Format("{0:#,0.000}", ((BrassView)item.EntityView).CaliberViewBrassLength);
                        }
                        @Html.DisplayFor(modelItem => parameterValue)
                        
                        @Html.DisplayFor(modelItem => item.EntityView.CaliberViewBrassLengthUnitViewAbbreviation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ((Brass)item.Entity).TimesFired)
                    </td>
                    <td>
                         @Html.ActionLink("Edit", "Edit", new { id = ((Brass)item.Entity).Id }, new { @class = "EditLinkStyle" }) |
                         @Html.ActionLink("Details", "Details", new { id = ((Brass)item.Entity).Id }, new { @class = "EditLinkStyle" }) |
                         @Html.ActionLink("Delete", "Delete", new { id = ((Brass)item.Entity).Id }, new { @class = "EditLinkStyle" }) |
                         @Html.ActionLink("Clone", "Clone", new { id = ((Brass)item.Entity).Id }, new { @class = "EditLinkStyle" })
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/tablefilter")
    <script type="text/JavaScript">
        $(document).ready(function () {
            $("#shootingtable").tablesorter();
        }
        );
    </script>
}