@model IEnumerable<Music.Entities.Models.Instrument>

@{
    ViewBag.Title = "Index";
}
<head>
    <title>Music.Web: Instrument Index</title>
</head>
<div class="container">

    <div class="row">
        @Html.ActionLink("Music Home", "Index", "Home", null, new { @class = "NavLinkStyle" }) | @Html.ActionLink("Music Items", "Index", "Item", null, new { @class = "NavLinkStyle" })
    </div>

    <h2>Instrument Index</h2>

    @Html.ActionLink("Create New", "Create", null, new { @class = "EditLinkStyle" })
    <br />
    <br />

    <table id="musictable" class="tablesorter">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            { 
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>